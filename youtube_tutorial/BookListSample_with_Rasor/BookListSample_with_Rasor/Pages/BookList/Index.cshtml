@page
@model BookListSample_with_Rasor.Pages.BookList.IndexModel

<div class="container row p-o m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create new book record</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="POST">
            <!-- Books テーブルからデータを取得し、その件数で分岐する -->
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th>Edit/Delete</th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Author)</td>
                            <td>@Html.DisplayFor(m => item.ISBN)</td>
                            <td>
                                <button class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>
                    No books available.
                </p>
            }
        </form>
    </div>
</div>